<div class="container">
  <div class="form-group custom-margin">
    <input type="text" class="form-control" placeholder="Search for files">
  </div>
  <% if !flash[:notice].blank? %>
  <div style="color: red"><%= flash[:notice] %></div>
  <% end %>

  <br />

  <%= link_to "New File", new_file_storage_path, class: "btn btn-primary" %>
  <br />
  <br />

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Candidate Name</th>
        <th>View file</th>
        <th>Download file</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @file_storages.each_with_index do |file_storage, index| %>
      <tr>
        <td><p class="h4"><%= index+1 %></p></td>
        <td><p class="h4"><%= file_storage.name %></p></td>
        <td>
          <%= link_to "View file", file_storage.attachment_url, class: "btn
          btn-info" %>
        </td>
        <td>
          <%= link_to "Download file", download_file_storage_url(id:
          file_storage.id), class: "btn btn-success" %>
        </td>
        <td>
          <%= button_to "Delete", file_storage, :method => :delete, confirm:
          "Are you sure you want to delete #{file_storage.name}?", class: "btn
          btn-danger" %>
        </td>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>
