<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   
  
<%= link_to "New File", new_file_storage_path %>   
<br>   
<br>   
  

<table class="table table-striped">   
   <thead>   
      <tr>   
         <th>#</th>
         <th>Candidate Name</th>   
         <th>View file</th>   
         <th>Download file</th>
         <th>Action</th>   
         <th>Type</th>
      </tr>   
   </thead>   
      
   <tbody>   
      <% @file_storages.each do |file_storage| %>   
            
         <tr>   
            <td><%= file_storage.name %></td>   
            <td><%= link_to "View file", file_storage.attachment_url %></td>   
            <td><%= link_to "Download file", download_file_storage_url(id: file_storage.id) %></td>   
            <td><%= button_to "Delete",  file_storage, :method => :delete, confirm: "Are you sure you want to delete #{file_storage.name}?" %></td>   
            <td><%= file_storage.attachment.content_type %></td>
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div>  