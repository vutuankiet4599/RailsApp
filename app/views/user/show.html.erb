<% user = User.find(params[:id]) %>
<div class="container mx-auto" style="background-color: #D2C6C3; text-align: center; border-radius: 20px">
    <h1>User information</h1>
    <div class="card">
        <div class="row">
            <div class="col-md-6">
                <% if user.name %>
                    <h3 class="card-title d-inline-block">Name: </h3>
                    <p class="card-text d-inline-block"><%= user.name %></p> <br/>
                <% end %>
                <% if user.age %>
                    <h3 class="card-title d-inline-block">Age: </h3>
                    <p class="card-text d-inline-block"><%= user.age %></p> <br/>
                <% end %>
                <h2 class="card-title">Contact with me: </h2>
                <p class="card-text"><%= user.email %></p>
            </div>
            <div class="col-md-6">
                <% if current_user.id == user.id %>
                    <div style="margin-bottom: 5px;">
                        <%= button_to "Edit account", edit_user_registration_url, :method => :get, class: "btn btn-primary" %>
                    </div>
                <% end %>
                
                <div style="margin-bottom: 5px;">
                    <%= button_to "Back to list file", file_storages_url, :method => :get, class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>